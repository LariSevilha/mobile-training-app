<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_black"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center">

    <ImageView
        android:id="@+id/logo_image"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:contentDescription="Logo do aplicativo"
        android:adjustViewBounds="true"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp" />

    <TextView
        android:id="@+id/day_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Detalhes do Dia"
        android:textColor="@color/gold_primary"
        android:textSize="20sp"
        android:fontFamily="sans-serif-medium"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="24dp">
        <LinearLayout
            android:id="@+id/trainings_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/input_background"
            android:padding="12dp" />
    </ScrollView>

    <LinearLayout
        android:id="@+id/back_button"
        style="@style/GoldButtonStyle">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â† Voltar"
            android:textColor="@color/button_black"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:layout_width="80dp"
        android:layout_height="1dp"
        android:background="@color/gold_primary"
        android:alpha="0.5"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Renato Frutuoso\ncrf 0000"
        android:textColor="@color/text_secondary"
        android:textSize="12sp"
        android:gravity="center" />
</LinearLayout>
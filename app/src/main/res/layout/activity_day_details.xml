<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1A1A"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center">

    <ImageView
        android:id="@+id/logo_image"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:contentDescription="Logo do aplicativo"
        android:adjustViewBounds="true"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp" />

    <TextView
        android:id="@+id/day_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Detalhes do Dia"
        android:textColor="#CEAC5E"
        android:textSize="20sp"
        android:fontFamily="sans-serif-medium"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <ImageView
        android:id="@+id/pdf_image_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="24dp"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/trainings_scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="24dp">
        <LinearLayout
            android:id="@+id/trainings_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/input_background"
            android:padding="12dp">
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/back_button"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/button_background"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="24dp"
        android:elevation="4dp"
        android:clickable="true"
        android:focusable="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="← Voltar"
            android:textColor="#000000"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:layout_width="80dp"
        android:layout_height="1dp"
        android:background="#CEAC5E"
        android:alpha="0.5"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Renato Frutuoso\n013025 G/MS"
        android:textColor="#94A3B8"
        android:textSize="12sp"
        android:gravity="center" />
</LinearLayout>
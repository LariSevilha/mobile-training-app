<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_black">

    <!-- Header com saudação e expiração -->
    <TextView
        android:id="@+id/greeting_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bem-vindo(a), Usuário!"
        android:textColor="@color/gold_primary"
        android:textSize="24sp"
        android:padding="16dp" />

    <TextView
        android:id="@+id/plan_expiry_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Data de expiração: DD/MM/AAAA"
        android:textColor="@color/gold_primary"
        android:textSize="14sp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:visibility="gone" />

    <!-- Botões de ação -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/training_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:orientation="horizontal"
            android:padding="12dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/treino_icon"
                app:tint="@color/gold_primary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Treino"
                android:textColor="@color/gold_primary"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/diet_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:orientation="horizontal"
            android:padding="12dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/alimentacao_icon"
                app:tint="@color/gold_primary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Dieta"
                android:textColor="@color/gold_primary"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pdf_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:orientation="horizontal"
            android:padding="12dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_pdf"
                app:tint="@color/gold_primary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="PDF"
                android:textColor="@color/gold_primary"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Mensagem de ausência de dados -->
    <TextView
        android:id="@+id/no_data_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nenhum dado disponível"
        android:textColor="@color/gold_primary"
        android:textSize="16sp"
        android:gravity="center"
        android:padding="16dp"
        android:visibility="gone" />
</LinearLayout>
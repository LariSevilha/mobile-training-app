<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/background_black">

    <!-- Saudação -->
    <TextView
        android:id="@+id/greeting_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bem-vindo(a), Usuário!"
        android:textColor="@color/gold_primary"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Data de expiração -->
    <TextView
        android:id="@+id/plan_expiry_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Data de expiração: N/A"
        android:textColor="@color/gold_primary"
        android:textSize="14sp"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginBottom="16dp" />

    <!-- Botão de Treino -->
    <LinearLayout
        android:id="@+id/training_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:gravity="center"
        android:padding="12dp"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Treinos"
            android:textColor="@color/button_black"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Botão de Dieta -->
    <LinearLayout
        android:id="@+id/diet_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:gravity="center"
        android:padding="12dp"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dieta"
            android:textColor="@color/button_black"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Card de PDF -->
    <LinearLayout
        android:id="@+id/pdf_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:gravity="center"
        android:padding="12dp"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PDF"
            android:textColor="@color/button_black"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Mensagem de sem dados -->
    <TextView
        android:id="@+id/no_data_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nenhum dado disponível"
        android:textColor="@color/gold_primary"
        android:textSize="16sp"
        android:gravity="center"
        android:visibility="gone" />

</LinearLayout>
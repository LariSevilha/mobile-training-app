<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/shadow_dark" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    <!-- Main card layer -->
    <item
        android:bottom="2dp"
        android:right="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="@color/card_background_elevated"
                android:endColor="@color/card_background"
                android:type="linear" />
            <corners android:radius="16dp" />
        </shape>
    </item>
</layer-list>
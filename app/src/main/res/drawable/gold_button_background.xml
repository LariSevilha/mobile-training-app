<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:startColor="@color/gold_dark"
                android:endColor="@color/gold_primary"
                android:type="linear" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:startColor="@color/gold_primary"
                android:endColor="@color/gold_light"
                android:type="linear" />
            <corners android:radius="12dp" />
        </shape>
    </item>
</selector>

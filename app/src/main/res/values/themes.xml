<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base AppCompat theme (fallback) -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/gold_primary</item>
        <item name="colorPrimaryDark">@color/gold_light</item>
        <item name="colorAccent">@color/gold_light</item>
        <item name="android:colorBackground">@color/background_black</item>
        <item name="android:windowBackground">@color/background_black</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:statusBarColor">@color/background_black</item>
        <item name="android:navigationBarColor">@color/background_black</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="AppTheme.Material3" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/gold_primary</item>
        <item name="colorOnPrimary">@color/button_black</item>
        <item name="colorPrimaryContainer">@color/gold_light</item>
        <item name="colorOnPrimaryContainer">@color/button_black</item>
        <item name="colorSecondary">@color/gold_light</item>
        <item name="colorOnSecondary">@color/button_black</item>
        <item name="colorSecondaryContainer">@color/gold_transparent</item>
        <item name="colorOnSecondaryContainer">@color/button_black</item>
        <item name="colorSurface">@color/card_background</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="android:colorBackground">@color/background_black</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="android:statusBarColor">@color/background_black</item>
    </style>

    <style name="Theme.TrainingAppMobile" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/gold_primary</item>
        <item name="colorOnPrimary">@color/text_white</item>
        <item name="colorPrimaryContainer">@color/gold_light</item>
        <item name="android:colorBackground">@color/background_black</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="android:statusBarColor">@color/background_black</item>
    </style>

</resources>

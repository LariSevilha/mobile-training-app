<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Primary brand colors -->
    <color name="gold_primary">#CEAC5E</color>
    <color name="gold_light">#E6C47E</color>
    <color name="gold_transparent">#33CEAC5E</color>

    <!-- Background colors -->
    <color name="background_black">#000000</color>
    <color name="card_background">#1A1A1A</color>
    <color name="day_tag_background">#1A1A1A</color>

    <!-- Button colors -->
    <color name="button_black">#000000</color>
    <color name="button_pressed">#1A1A1A</color>

    <!-- Text colors -->
    <color name="text_primary">#FFFFFF</color>
    <color name="text_secondary">#94A3B8</color>
    <color name="text_white">#FFFFFF</color>

    <!-- Status colors -->
    <color name="error_red">#EF4444</color>
    <color name="success_green">#10B981</color>
    <color name="warning_yellow">#F59E0B</color>
    <!-- Input colors -->
    <color name="input_background">#2A2A2A</color>
    <color name="input_border">#3A3A3A</color>
    <color name="input_bg">#1E1E1E</color>
    <!-- Divider colors -->
    <color name="divider">#2A2A2A</color>


    <style name="GoldButtonStyle" parent="Widget.Material3.Button">
        <item name="android:background">@color/gold_primary</item>
        <item name="android:textColor">@color/button_black</item>
    </style>

    <style name="DayButtonStyle" parent="Widget.Material3.Button">
        <item name="android:background">@color/input_bg</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="DayButtonText" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>